@model List<Eventures.Models.ViewModels.EventAllViewModel>

@{
    ViewData["Title"] = "All";
}

<div id="data-holder" class="w-75 mx-auto">
    <h1 class="text-center">All Events</h1>
    <hr class="bg-eventures hr-2" />

    <table class="table">
        <thead>
            <tr class="row mx-auto">
                <th class="col-md-1">#</th>
                <th class="col-md-5">Name</th>
                <th class="col-md-2">Start</th>
                <th class="col-md-2">End</th>
                <th class="col-md-2">Place</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr class="row mx-auto">
                    <th class="col-md-1">@(i + 1)</th>
                    <th class="col-md-5">@Model[i].Name</th>
                    <th class="col-md-2">@Model[i].Start</th>
                    <th class="col-md-2">@Model[i].End</th>
                    <th class="col-md-2">@Model[i].Place</th>
                </tr>
            }
        </tbody>
    </table>
</div>
